{
    "name": "falgunphp/template",
    "type": "library",
    "homepage": "https://github.com/falgun/template",
    "license": "MIT",
    "authors": [
        {
            "name": "S.M. Ataur Rahman",
            "email": "dev.ataur.rahman@gmail.com",
            "homepage": "https://ataur.net/"
        }
    ],
    "autoload": {
        "psr-4": {
            "Falgun\\Template\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Falgun\\Template\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4|^8.0",
        "falgunphp/csrf": "^0.0",
        "falgunphp/http": "^0.0",
        "falgunphp/pagination": "^0.0"
    },
    "scripts": {
        "phpunit": "phpunit --verbose --colors=always"
    },
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "sempro/phpunit-pretty-print": "^1.4",
        "vimeo/psalm": "^3.18"
    }
}
